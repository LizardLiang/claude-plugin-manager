<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ClaudePluginManager.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="ClaudePluginManager.Views.PluginDetailsView"
             x:DataType="vm:PluginDetailsViewModel">

    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
            BorderThickness="1,0,0,0">
        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Header with close button -->
            <Grid Grid.Row="0" Margin="16,16,16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Spacing="4">
                    <!-- Name and Version -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="{Binding Name}"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Version, StringFormat='v{0}'}"
                                   Opacity="0.6"
                                   VerticalAlignment="Center"
                                   FontSize="14"/>
                    </StackPanel>

                    <!-- Author -->
                    <TextBlock Opacity="0.7" FontSize="13">
                        <Run Text="by"/>
                        <Run Text="{Binding Author}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Close button -->
                <Button Grid.Column="1"
                        Command="{Binding CloseCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="8"
                        VerticalAlignment="Top"
                        ToolTip.Tip="Close">
                    <TextBlock Text="&#x2715;" FontSize="16"/>
                </Button>
            </Grid>

            <!-- Scrollable content -->
            <ScrollViewer Grid.Row="1" Padding="16,0">
                <StackPanel Spacing="16">
                    <!-- Type badge and tags -->
                    <WrapPanel Orientation="Horizontal">
                        <!-- Type badge -->
                        <Border Background="{DynamicResource SystemControlHighlightAccentBrush}"
                                CornerRadius="4"
                                Padding="8,4"
                                Margin="0,0,8,4">
                            <TextBlock Text="{Binding DisplayType}"
                                       FontSize="12"
                                       Foreground="White"/>
                        </Border>

                        <!-- Tags -->
                        <ItemsControl ItemsSource="{Binding Tags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Margin="0,0,4,4">
                                        <TextBlock Text="{Binding}" FontSize="11" Opacity="0.8"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>

                    <!-- Description -->
                    <TextBlock Text="{Binding Description}"
                               TextWrapping="Wrap"
                               IsVisible="{Binding Description, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                               Opacity="0.9"/>

                    <!-- Repository link -->
                    <Button IsVisible="{Binding HasRepositoryUrl}"
                            Command="{Binding OpenRepositoryCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Cursor="Hand"
                            HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="Repository:"
                                       Opacity="0.7"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding RepositoryUrl}"
                                       Foreground="{DynamicResource SystemControlHighlightAccentBrush}"
                                       TextDecorations="Underline"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- README section -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="README"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Opacity="0.8"/>

                        <!-- Loading spinner -->
                        <StackPanel Orientation="Horizontal"
                                    Spacing="8"
                                    IsVisible="{Binding IsLoading}"
                                    Margin="0,8">
                            <ProgressBar IsIndeterminate="True" Width="100"/>
                            <TextBlock Text="Loading README..."
                                       Opacity="0.7"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- No README message -->
                        <TextBlock Text="No README available"
                                   Opacity="0.5"
                                   FontStyle="Italic"
                                   IsVisible="{Binding HasNoReadme}"
                                   Margin="0,8"/>

                        <!-- README content -->
                        <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                CornerRadius="4"
                                Padding="12"
                                IsVisible="{Binding ReadmeContent, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                            <SelectableTextBlock Text="{Binding ReadmeContent}"
                                       TextWrapping="Wrap"
                                       FontFamily="Consolas, Monaco, monospace"
                                       FontSize="12"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Install button -->
            <Border Grid.Row="2"
                    Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    Padding="16">
                <Button Content="Install"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        IsVisible="{Binding !IsInstalled}"
                        Classes="accent"/>
            </Border>
        </Grid>
    </Border>

</UserControl>
